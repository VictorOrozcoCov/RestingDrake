<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	<persistence-unit name="PersistenceApplication">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.iavega.services.restfuldragon.models.DClass</class>
		<class>com.iavega.services.restfuldragon.models.DRace</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/dungeon" />
			<property name="hibernate.connection.user" value="dev_rol" />
			<property name="hibernate.connection.password" value="dev" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>

</persistence>